---
// Move counter component - subscribes to game state
---

<div class="flex items-center gap-2 bg-slate-700 px-4 py-2 rounded-lg">
  <svg class="w-5 h-5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
  </svg>
  <span id="move-display" class="text-xl font-mono text-white">0</span>
  <span class="text-slate-400 text-sm">moves</span>
</div>

<script>
  import { $moves } from '../stores/gameStore';

  const moveDisplay = document.getElementById('move-display') as HTMLSpanElement;

  $moves.subscribe((moves) => {
    moveDisplay.textContent = String(moves);
  });
</script>
